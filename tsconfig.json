{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
		"paths": {
			"@images/*": ["./public/images/*"],
			"@components/*": ["./src/components/*"],
			"@common/*": ["./src/common/*"],
			"@theme": ["./src/theme"],
			"@theme/*": ["./src/theme/*"]
		},
    "types": ["node"]
    
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src", "public"],
  "exclude": ["node_modules"]
}
